<html>
    <head>
        <meta name="decorator" content="atl.admin"/>
            $webResourceManager.requireResourcesForContext("groupie")
        <title>Groupie Plugin Configuration</title>
        <style>
            input, label {
                display: block;
            }
        </style>
    </head>
    <body>
        <form id="admin">
            <div>
                <label for="mapping">Label-Groups Mapping Configuration</label>
                <textarea name="mapping" id="mapping" cols="80" rows="20" spellcheck="false"></textarea>
            </div>
            <div>
                <input type="submit" value="Save" />
            </div>
            <br/><br/>
            <div>
                <label for="security-labels-overview">Spaces with security labels</label>
                <textarea name="security-labels-overview" id="security-labels-overview" cols="80" rows="20" spellcheck="false" disabled></textarea>
            </div>
            <div>
                <label for="standard-labels-overview">Spaces with standard (non-security) labels</label>
                <textarea name="standard-labels-overview" id="standard-labels-overview" cols="80" rows="20" spellcheck="false" disabled></textarea>
            </div>
        </form>
    </body>
</html>
